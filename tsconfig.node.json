{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/*",
    "src/commonTypes/**/*",
    "src/main/**/*",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@commonTypes/*": [
        "src/commonTypes/*"
      ],
      "@mainsPage/*": [
        "src/main/*"
      ]
    }
  }
}
